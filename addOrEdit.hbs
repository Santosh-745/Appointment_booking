<h3>{{viewTitle}}</h3>

<form action="/appointment" method="post" autocomplete="off">
    <input type="hidden" name="_id" value="{{appointment._id}}">
    <div class="form-group my-3">
        <label for="fullName">Full Name</label> 
        <input type="text" class="form-control my-2" name="fullName" placeholder="Full Name" value="{{appointment.fullName}}">
        <div class="text-danger">
            {{appointment.fullNameError}}
        </div>
    </div>
    <div class="row my-3">
        <div class="form-group col-md-6">
            <label for="city">Date</label> 
            <input type="date" id="dateField" class="my-2 form-control start" name="date" placeholder="Date" min="<script>today</script>" value="{{appointment.date}}">
        </div>
        <div class="form-group col-md-6">
            <label for="mobile">Mobile Number</label> 
            <input type="text" class="my-2 form-control" name="mobile" placeholder="Mobile Number" value="{{appointment.mobile}}">
        </div>
        <div class="text-danger">
            {{dateError}}
        </div>
    </div>
    <div class="form-group my-3">
        <label for="email">Email ID</label> 
        <input type="email" class="form-control my-2" name="email" placeholder="Email" value="{{appointment.email}}">
        <div class="text-danger">
            {{appointment.emailError}}
        </div>
    </div>
    <div class="form-group my-4">
        <button type="submit" class="btn  btn-warning">Submit</button>
        <a class="btn btn-secondary" href="/appointment/list">View All</a>
    </div>
</form>

<script>
    var date = new Date();
    var today = date.getFullYear()+'/'+ (today.getMonth() + 1)+'/'+ (today.getDate());
    console.log(today);
    document.getElementById("dateField").setAttribute("min",today);
</script>